{
  "version": "4.0.1",
  "name": "Lectio",
  "short_name": "Lectio",
  "manifest_version": 2,
  "description": "Lectio",
  "browser_action": {
    "default_title": "Lectio",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html",
    "popup.html"
  ],
  "background": {
    
    "persistent": false,
    "page": "background.html"
  },
  
  "permissions": ["contextMenus", "tabs", "storage", "https://github.com/*","https://meshb.nlm.nih.gov/*","https://openproject-devl.netspective.com/*","activeTab","https://*/","http://*/","cookies","http://*.google.com/"],
  "content_security_policy": "default-src 'self';connect-src 'self' * data:; frame-src 'self' *;script-src 'self' 'unsafe-eval'; style-src * 'unsafe-inline'; img-src 'self' * data: https: http: blob:;font-src 'self' * data:;object-src 'self' 'unsafe-eval';script-src-elem 'self' *"
}
